<!-- views/resend.ejs -->
<!doctype html>
<html>

<head>
  <%- include('partials/analytics'); -%>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css"
    integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/style.css">

  <title>MyStore - Resend Verification</title>
</head>

<body>
  <div class="container">
    <div class="top">
      <% errorMessage.forEach(function(msg) { %>
      <div class="banner error">
        <%= msg %>
      </div>
      <% }); %>

      <% message.forEach(function(msg) { %>
      <div class="banner success">
        <%= msg %>
      </div>
      <% }); %>

      <%- include('partials/user', {user: user}); -%>
    </div>

    <div class="content">
      <h2>Request Verification Email</h2>
      <form id="user-form" action="/resend" method="post">
        <label>Email</label>
        <input type="text" name="email">
        <label for="password"><strong>Password</strong></label>
        <input id="password" name="password" type="password" minlength="8"
          pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[@$!%*?#.&])[A-Za-z0-9@$!%*?#.&]{8,}.*"
          oninput="setCustomValidity('')" oninvalid="setCustomValidity(
                    'Must be 8 or more characters long and contain one number, one uppercase and lowercase letter and a symbol'
                )" required>
        <button type="submit" class="button button-alert">Request Verification Email</button>
      </form>

      <hr>
      <div>
        <p>Or go <a href="/">home</a>.</p>
      </div>
    </div>

    <%- include('partials/footer'); -%>

  </div>
</body>
<script src="/static/scripts/menu.js"></script>

</html>